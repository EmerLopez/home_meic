<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla_bienvenida"
    android:background="@drawable/card_5">>


  <ImageView
      android:id="@+id/fondo_imagen"
      android:layout_width="0dp"
      android:layout_height="120dp"
      android:transitionName="logo_imagen"
      android:layout_marginStart="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="200dp"
      android:layout_marginEnd="10dp"
      android:layout_marginRight="10dp"
      android:src="@drawable/logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/logo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:transitionName="logo_texto"
      android:layout_marginTop="60dp"
      android:fontFamily="@font/carter_one"
      android:gravity="center_horizontal"
      android:text="@string/logo_name"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fondo_imagen" />

  </androidx.constraintlayout.widget.ConstraintLayout>