<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesion"
    android:orientation="vertical"
    android:background="@color/card1">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">



    <ImageView
        android:id="@+id/ini_logo_imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="logo_imagen1"
        android:layout_alignParentRight="true"

        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/ini_hola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="logo_texto2"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Administracion Home MEIC"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/ini_iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tus credenciales para continuar"
        android:transitionName="iniciar_logo3"
        android:textSize="16sp"
        android:fontFamily="@font/fredoka_one"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="nombre_logo4"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/lo_correo"
                android:layout_width="match_parent"
                android:hint="Correo"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="contrasena_logo5"
            app:passwordToggleEnabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/lo_contrasena"
                android:hint="ContraseÃ±a"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/lo_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="continuar_logo6"
            android:text="Ingresar"
            android:textSize="11sp"
            android:background="@drawable/round_btn"

            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"/>


    </LinearLayout>
</LinearLayout>


</LinearLayout>